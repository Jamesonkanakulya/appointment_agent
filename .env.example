# ────────────────────────────────────────────────────
# Appointment Agent — Environment Variables
# Copy this file to .env and fill in your values
# ────────────────────────────────────────────────────

# Database password for PostgreSQL
DB_PASSWORD=changeme

# Secret key for JWT signing
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-in-production

# Fernet encryption key for storing API keys/secrets
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Default admin user credentials (created on first run if no users exist)
FIRST_USER=admin
FIRST_PASSWORD=changeme

# LLM API key seeded into global settings on first run
# Using GitHub Models (GPT-4o via OpenAI-compatible endpoint)
GITHUB_TOKEN=ghp_your_token_here
